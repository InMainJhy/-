<mujoco model="smart_car_standalone">
  <compiler angle="degree" coordinate="local" inertiafromgeom="true" autolimits="true"/>
  <option timestep="0.002" gravity="0 0 -9.81"/>

  <asset>
    <texture name="tex_floor" type="2d" builtin="checker" rgb1="0.8 0.8 0.8" rgb2="0.9 0.9 0.9" width="512" height="512" mark="edge" markrgb="0.6 0.6 0.6"/>
    <material name="mat_floor" texture="tex_floor" texrepeat="10 10" reflectance="0.1"/>
    
    <!-- Car Materials -->
    <material name="piano_black" rgba="0.02 0.02 0.02 1" specular="1" shininess="1" reflectance="0.5"/>
    <material name="laptop_silver" rgba="0.7 0.7 0.72 1" shininess="0.9"/>
    <material name="sensor_blue" rgba="0 0.4 0.8 1" emission="0.5"/>
    <material name="laser_red" rgba="1 0 0 0.8" emission="1"/>
    <material name="handle_silver" rgba="0.8 0.8 0.83 1" specular="1" shininess="1"/>
  </asset>

  <worldbody>
    <light directional="true" pos="0 0 5" dir="0 0 -1" diffuse="0.8 0.8 0.8"/>
    <geom name="floor" type="plane" pos="0 0 0" size="10 10 0.1" material="mat_floor"/>

    <!-- Smart Car (Extracted from formatted (8)(1)(1).xml) -->
    <!-- Adjusted pos to be on ground (Wheel radius 0.06 - 0.02 offset = 0.04 height? No, let's verify) -->
    <!-- Original pos was 0 -1.5 0.15. Wheel radius 0.06. -->
    <body name="smart_car" pos="0 0 0.08">
      <freejoint name="car_joint"/>
      <geom name="car_chassis" type="box" size="0.22 0.16 0.02" pos="0 0 0" material="piano_black"/>
      <geom name="car_body_upper" type="box" size="0.18 0.14 0.04" pos="-0.02 0 0.05" material="laptop_silver"/>
      <geom name="car_sensor_mount" type="cylinder" size="0.04 0.02" pos="0.1 0 0.1" material="piano_black"/>
      <geom name="car_sensor_lens" type="cylinder" size="0.035 0.01" pos="0.1 0 0.12" material="sensor_blue"/>
      
      <site name="obstacle_sensor_site" pos="0.22 0 0.05" size="0.01" material="laser_red"/>
      <site name="rear_sensor_site" pos="-0.22 0 0.05" euler="0 0 180" size="0.01" material="laser_red"/>
      
      <body name="wheel_fl" pos="0.14 0.18 -0.02">
        <joint name="joint_fl" type="hinge" axis="0 1 0"/>
        <geom name="axle_fl" type="cylinder" size="0.01 0.03" euler="90 0 0" material="handle_silver"/>
        <geom type="cylinder" size="0.06 0.025" euler="90 0 0" material="piano_black" friction="1.0"/>
      </body>
      <body name="wheel_fr" pos="0.14 -0.18 -0.02">
        <joint name="joint_fr" type="hinge" axis="0 1 0"/>
        <geom name="axle_fr" type="cylinder" size="0.01 0.03" euler="90 0 0" material="handle_silver"/>
        <geom type="cylinder" size="0.06 0.025" euler="90 0 0" material="piano_black" friction="1.0"/>
      </body>
      <body name="wheel_bl" pos="-0.14 0.18 -0.02">
        <joint name="joint_bl" type="hinge" axis="0 1 0"/>
        <geom name="axle_bl" type="cylinder" size="0.01 0.03" euler="90 0 0" material="handle_silver"/>
        <geom type="cylinder" size="0.06 0.025" euler="90 0 0" material="piano_black" friction="1.0"/>
      </body>
      <body name="wheel_br" pos="-0.14 -0.18 -0.02">
        <joint name="joint_br" type="hinge" axis="0 1 0"/>
        <geom name="axle_br" type="cylinder" size="0.01 0.03" euler="90 0 0" material="handle_silver"/>
        <geom type="cylinder" size="0.06 0.025" euler="90 0 0" material="piano_black" friction="1.0"/>
      </body>
    </body>
  </worldbody>

  <sensor>
    <rangefinder name="forward_dist" site="obstacle_sensor_site"/>
    <rangefinder name="rear_dist" site="rear_sensor_site"/>
  </sensor>

  <actuator>
    <motor name="drive_fl" joint="joint_fl" gear="50"/>
    <motor name="drive_fr" joint="joint_fr" gear="50"/>
    <motor name="drive_bl" joint="joint_bl" gear="50"/>
    <motor name="drive_br" joint="joint_br" gear="50"/>
  </actuator>
</mujoco>