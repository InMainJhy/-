<mujoco model="study_room">
  <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>
  <option timestep="0.01" gravity="0 0 -9.81" density="1.2" viscosity="0.1"/>

  <visual>
    <headlight ambient="0.4 0.4 0.4" diffuse="0.6 0.6 0.6" specular="0.1 0.1 0.1"/>
    <map fogstart="3" fogend="10" force="0.1" zfar="30"/>
    <quality shadowsize="4096"/>
    <global offwidth="1920" offheight="1080"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.1 0.1 0.1" rgb2="0 0 0" width="512" height="512"/>
    <texture name="floor_tex" type="2d" builtin="flat" rgb1="0.4 0.3 0.2" width="512" height="512"/> 
    <texture name="wood_tex" type="2d" builtin="flat" rgb1="0.35 0.2 0.05" width="512" height="512"/>
    <texture name="wall_tex" type="2d" builtin="flat" rgb1="0.8 0.75 0.7" width="512" height="512"/>
    <texture name="window_tex" type="2d" builtin="flat" rgb1="0.9 0.9 1.0" width="512" height="512"/>
    <texture name="fabric_tex" type="2d" builtin="flat" rgb1="0.5 0.1 0.1" width="512" height="512"/>
    
    <material name="floor_mat" texture="floor_tex" reflectance="0.1"/>
    <material name="wood_mat" texture="wood_tex" reflectance="0.1"/>
    <material name="wall_mat" texture="wall_tex" reflectance="0"/>
    <material name="window_mat" texture="window_tex" reflectance="0.5" emission="0.2"/>
    <material name="metal_mat" rgba="0.6 0.6 0.6 1" reflectance="0.5" shininess="0.8"/>
    <material name="gold_mat" rgba="0.8 0.6 0.2 1" reflectance="0.8" shininess="1"/>
    <material name="book_red" rgba="0.6 0.2 0.2 1"/>
    <material name="book_blue" rgba="0.2 0.2 0.6 1"/>
    <material name="book_green" rgba="0.2 0.5 0.2 1"/>
    <material name="rug_mat" texture="fabric_tex" reflectance="0.1"/>
    <material name="lamp_glow" rgba="1 0.9 0.6 1" emission="0.8"/>
  </asset>

  <worldbody>
    <!-- Camera -->
    <camera name="isometric_view" pos="12 -12 12" mode="targetbody" target="center_point"/>

    <!-- Lighting -->
    <light pos="0 0 8" dir="0 0 -1" diffuse="0.8 0.7 0.6" castshadow="true"/>
    <light pos="-5 5 5" dir="1 -1 -0.5" diffuse="0.3 0.3 0.4" castshadow="true"/>
    <!-- Lamp Light -->
    <light pos="0 0 2" dir="0 0 -1" diffuse="0.8 0.6 0.2" attenuation="1 0 0" castshadow="false"/>

    <body name="center_point" pos="0 0 0">
        <geom type="sphere" size="0.01" rgba="0 0 0 0"/>
    </body>

    <!-- Floor -->
    <geom name="floor" type="box" size="6 6 0.1" pos="0 0 -0.1" material="floor_mat"/>

    <!-- Walls -->
    <geom name="wall_back" type="box" size="6 0.1 3" pos="0 6 3" material="wall_mat"/>
    <geom name="wall_left" type="box" size="0.1 6 3" pos="-6 0 3" material="wall_mat"/>

    <!-- Wall Decor (Gears/Clocks) -->
    <body name="wall_decor" pos="-5.9 2 4">
        <geom type="cylinder" size="0.5 0.05" euler="0 90 0" material="gold_mat"/>
        <geom type="cylinder" size="0.3 0.06" euler="0 90 0" material="metal_mat"/>
    </body>
    <body name="wall_decor2" pos="-5.9 4 3">
        <geom type="cylinder" size="0.4 0.05" euler="0 90 0" material="wood_mat"/>
    </body>

    <!-- Windows -->
    <body name="window1" pos="-2 5.9 4">
        <geom type="box" size="1 0.05 1" material="window_mat"/>
        <geom type="box" size="1.05 0.06 0.05" pos="0 0 0" material="wood_mat"/> 
        <geom type="box" size="0.05 0.06 1.05" pos="0 0 0" material="wood_mat"/> 
    </body>
    <body name="window2" pos="2 5.9 4">
        <geom type="box" size="1 0.05 1" material="window_mat"/>
        <geom type="box" size="1.05 0.06 0.05" pos="0 0 0" material="wood_mat"/>
        <geom type="box" size="0.05 0.06 1.05" pos="0 0 0" material="wood_mat"/>
    </body>

    <!-- Stairs -->
    <body name="stairs_structure" pos="-5 -2 0">
        <geom name="platform" type="box" size="1 2 1.5" pos="-0.5 0 1.5" material="wood_mat"/>
        <geom type="box" size="1 0.4 0.15" pos="0.5 -1.5 0.15" material="wood_mat"/>
        <geom type="box" size="1 0.4 0.15" pos="0.5 -1.1 0.45" material="wood_mat"/>
        <geom type="box" size="1 0.4 0.15" pos="0.5 -0.7 0.75" material="wood_mat"/>
        <geom type="box" size="1 0.4 0.15" pos="0.5 -0.3 1.05" material="wood_mat"/>
        <geom type="box" size="1 0.4 0.15" pos="0.5 0.1 1.35" material="wood_mat"/>
        <!-- Railing -->
        <geom type="cylinder" size="0.05 1" pos="0.5 -0.7 2" material="gold_mat"/> 
    </body>

    <!-- Bookshelves -->
    <body name="bookshelf1" pos="-3 5.5 0">
        <geom type="box" size="1 0.4 2.5" pos="0 0 2.5" material="wood_mat"/>
        <geom type="box" size="0.9 0.4 0.05" pos="0 0.05 1" material="wood_mat"/>
        <geom type="box" size="0.9 0.4 0.05" pos="0 0.05 2" material="wood_mat"/>
        <geom type="box" size="0.9 0.4 0.05" pos="0 0.05 3" material="wood_mat"/>
        <geom type="box" size="0.9 0.4 0.05" pos="0 0.05 4" material="wood_mat"/>
        <!-- Books -->
        <geom type="box" size="0.1 0.3 0.2" pos="-0.5 0.1 1.25" material="book_red"/>
        <geom type="box" size="0.1 0.3 0.18" pos="-0.3 0.1 1.23" material="book_blue"/>
        <geom type="box" size="0.1 0.3 0.22" pos="-0.1 0.1 1.27" material="book_green"/>
        <geom type="box" size="0.1 0.3 0.2" pos="0.2 0.1 2.25" material="book_red"/>
        <geom type="box" size="0.1 0.3 0.18" pos="0.4 0.1 2.23" material="book_blue"/>
    </body>
    
    <body name="bookshelf2" pos="0 5.5 0">
        <geom type="box" size="1 0.4 2.5" pos="0 0 2.5" material="wood_mat"/>
        <geom type="box" size="0.9 0.4 0.05" pos="0 0.05 1" material="wood_mat"/>
        <geom type="box" size="0.9 0.4 0.05" pos="0 0.05 2" material="wood_mat"/>
        <geom type="box" size="0.9 0.4 0.05" pos="0 0.05 3" material="wood_mat"/>
        <geom type="box" size="0.9 0.4 0.05" pos="0 0.05 4" material="wood_mat"/>
        <!-- Globe on Shelf -->
        <body name="globe_shelf" pos="0 0 3.3">
             <geom type="sphere" size="0.25" material="book_blue"/>
             <geom type="cylinder" size="0.2 0.02" pos="0 0 -0.25" material="gold_mat"/>
        </body>
    </body>

    <!-- Central Desk -->
    <body name="desk" pos="0 0 0">
        <geom type="box" size="1.5 0.8 0.05" pos="0 0 0.8" material="wood_mat"/>
        <geom type="box" size="0.4 0.7 0.4" pos="-1 0 0.4" material="wood_mat"/>
        <geom type="box" size="0.4 0.7 0.4" pos="1 0 0.4" material="wood_mat"/>
        <geom type="box" size="1.4 0.2 0.1" pos="0 0.5 0.95" material="wood_mat"/>
        
        <!-- Desk Lamp -->
        <body name="desk_lamp" pos="-1 0.2 0.85">
            <geom type="cylinder" size="0.1 0.02" material="gold_mat"/>
            <geom type="capsule" size="0.02 0.2" pos="0 0 0.2" material="gold_mat"/>
            <geom type="sphere" size="0.1" pos="0 0 0.4" material="lamp_glow"/>
        </body>

        <!-- Papers/Books on Desk -->
        <geom type="box" size="0.2 0.3 0.02" pos="0.5 -0.2 0.85" material="book_red" euler="0 0 10"/>
        <geom type="box" size="0.15 0.2 0.02" pos="0.6 -0.1 0.89" material="wall_mat" euler="0 0 -5"/>

        <!-- Chair -->
        <body name="chair" pos="0 -1.2 0" euler="0 0 180">
            <geom type="box" size="0.3 0.3 0.05" pos="0 0 0.5" material="wood_mat"/> 
            <geom type="box" size="0.05 0.05 0.25" pos="-0.25 -0.25 0.25" material="wood_mat"/> 
            <geom type="box" size="0.05 0.05 0.25" pos="0.25 -0.25 0.25" material="wood_mat"/> 
            <geom type="box" size="0.05 0.05 0.25" pos="-0.25 0.25 0.25" material="wood_mat"/> 
            <geom type="box" size="0.05 0.05 0.25" pos="0.25 0.25 0.25" material="wood_mat"/> 
            <geom type="box" size="0.3 0.05 0.3" pos="0 0.25 0.8" material="wood_mat"/> 
        </body>
    </body>

    <!-- Telescope -->
    <body name="telescope" pos="3 2 0" euler="0 0 45">
        <geom type="cylinder" size="0.05 0.8" pos="0 0 0.8" euler="45 0 0" material="gold_mat"/> <!-- Main tube -->
        <geom type="capsule" size="0.02 0.6" pos="0.3 0 0.6" euler="-10 0 0" material="wood_mat"/> <!-- Leg -->
        <geom type="capsule" size="0.02 0.6" pos="-0.3 0 0.6" euler="-10 0 0" material="wood_mat"/> <!-- Leg -->
        <geom type="capsule" size="0.02 0.6" pos="0 -0.3 0.6" euler="10 0 0" material="wood_mat"/> <!-- Leg -->
    </body>

    <!-- Side Table -->
    <body name="side_table" pos="3 3 0">
         <geom type="cylinder" size="0.6 0.05" pos="0 0 0.6" material="wood_mat"/>
         <geom type="cylinder" size="0.05 0.6" pos="0 0 0" material="wood_mat"/>
         <!-- Globe on Side Table -->
         <body name="globe_table" pos="0 0 0.65">
             <geom type="sphere" size="0.2" material="book_blue"/>
             <geom type="cylinder" size="0.15 0.02" pos="0 0 -0.2" material="gold_mat"/>
         </body>
    </body>
    
    <!-- Rug -->
    <geom name="rug" type="box" size="2 1 0.01" pos="0 -1.5 0.01" material="rug_mat"/>
    <geom name="rug_round" type="cylinder" size="1.5 0.01" pos="3 3 0.01" material="rug_mat"/>

  </worldbody>
</mujoco>